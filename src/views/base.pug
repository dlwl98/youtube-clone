doctype html 
html(lang="ko")
  head 
    title #{pageTitle} | Youtube
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body 
    header 
      h1=pageTitle
      nav 
        ul 
          li
            a(href="/") HOME
          li 
            a(href="/search") SEARCH
          if loggedIn 
            li 
              a(href="/videos/upload") UPLOAD
            li 
              a(href="/users/edit") #{loggedInUser.name ? `${loggedInUser.name}의 프로필` : "닉네임을 만들어 주세요"}
            li 
              a(href="/users/logout") LOGOUT
          else 
            li
              a(href="/login") LOGIN
            li
              a(href="/join") JOIN
    main
      block content
      br
    include partials/footer
