header 
  a(href="/").header__logo
    img(src="/images/logo.png")
  nav 
    ul 
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn 
        li 
          a(href="/videos/upload") UPLOAD
        li 
          a(href="/users/logout") LOGOUT
        li 
          a(href=`/users/${loggedInUser._id}`)
            if loggedInUser.avatarUrl === ""
              span.material-symbols-outlined person
            else
              img(src=(loggedInUser.avatarUrl.split("/")[0] === "https:" 
                  ? loggedInUser.avatarUrl 
                  : "/users/" + loggedInUser.avatarUrl)).header__avatar
      else 
        li
          a(href="/login") LOGIN
        li
          a(href="/join").header__btn JOIN
