extends base
include mixins/hashtags

block content 
  div#video__container
    video(width="100%" data-id=video._id)#main-video
      source(src=video.fileUrl type="video/mp4")
    div#video__controls.hide
      div#time__range
        div.input__range
          input(type="range" min="0" step="0.1" value="0").input__range-share#time__range-visible
          input(type="range" min="0" step="0.1" value="0").input__range-share.input__range-invisible#time__range-invisible
      div#video__buttons
        div
          span#play-btn
            i.fas.fa-play
          span#mute-btn
            i.fas.fa-volume-up
          div.input__range
            input(type="range" min="0" max="1" step="0.1" value="0.5").input__range-share#volume__range-visible
            input(type="range" min="0" max="1" step="0.1" value="0.5").input__range-share.input__range-invisible#volume__range-invisible
          div#time
            span#current-time 00:00
            span &nbsp;/&nbsp;
            span#total-time 00:00
        span#fullscreen-btn
          i.fas.fa-expand
