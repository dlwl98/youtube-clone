extends base

block content
  if errorMsg
    span=errorMsg
  form(method="POST" enctype="multipart/form-data")
    label(for="avatar") Avatar 
    img(src=loggedInUser.avatarUrl width="100px" height="100px")
    input(type="file" id="avatar" name="avatar"  accept="image/*")
    label(for="name") Name
    input(type="text" id="name" name="name" value=loggedInUser.name)
    label(for="email") Email
    input(type="email" required id="email" name="email" value=loggedInUser.email)
    label(for="username") Username
    input(type="text" required id="username" name="username" value=loggedInUser.username disabled)
    label(for="location") Location
    input(type="text" id="location" name="location" value=loggedInUser.location)
    input(type="submit" value="Update Profile")
  if !loggedInUser.socialOnly
    br
    a(href="change-password") Change Password &rarr;